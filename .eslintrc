{
    "extends": "eslint:recommended",
    "env": {
		"browser": true,
		"node": true,
		"amd": true,
		"mocha": true
	},
	"ecmaFeatures": {
		"jsx": true,
		"arrowFunctions": true,
		"blockBindings": true,
		"classes": true,
		"defaultParams": true,
		"destructuring": true,
		"forOf": true,
		"generators": true,
		"modules": true,
		"templateStrings": true,
		"objectLiteralComputedProperties": true,
		"objectLiteralShorthandMethods": true,
		"objectLiteralShorthandProperties": true
	},
	"rules": {
		"quotes": [ 2, "single" ]
	}
}
